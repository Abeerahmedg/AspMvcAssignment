@model PeopleViewModel
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <h5>Add new writer:</h5>
        <form method="post" asp-action="Create" asp-controller="PeopleDb">
            <div class="form-group">
                <label asp-for="@Model.cpvm.Name"> Name:</label>
                <input asp-for="@Model.cpvm.Name" placeholder="Name" class="form-control">
                <span asp-validation-for="@Model.cpvm.Name" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.cpvm.NumberOfBooks">Number of books:</label>
                <input asp-for="@Model.cpvm.NumberOfBooks" placeholder="Number of books" class="form-control" type="text">
                <span asp-validation-for="@Model.cpvm.NumberOfBooks" class="text-warning"></span>
            </div>
            <div class="form-group">
                <div class="form-group row">
                    <label asp-for="cpvm.CityId">City:</label>
                    <div class="col-sm-7">
                        <select asp-for="cpvm.CityId" class="form-control" asp-items="ViewBag.Cities">
                            <option value="" selected disabled>Select City</option>
                        </select>
                        <span asp-validation-for="cpvm.CityId"></span>
                    </div>
                    <div>
                        <input type="submit" value="Add" class="btn btn-primary">
                    </div>

                </div>
            </div>
        </form>
        <div style="white-space: pre"> </div>
        <div col-md-6 col-md-offset-3>
            <form method="post" asp-action="Search" asp-controller="PeopleDb">
                <div class="search-form">
                    <input type="text" name="Search" value="" placeholder="Search" />
                    <input type="submit" value="search" />
                </div>
            </form>
        </div>
        <div style="white-space: pre"> </div>

        <h3>List of writers</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Number of books</th>
                    <th>City</th>
                    <th> </th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model.PeopleList)
                {
                    <tr>
                        <td>@person.Id</td>
                        <td>@person.Name</td>
                        <td>@person.NumberOfBooks</td>
                        <td>@person.City.CityName</td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td><a asp-action="Delete" asp-route-id=@person.Id class="btn btn-danger">Delete</a></td>

                        }
                        <td>
                            <a asp-action="Edit" asp-controller="PeopleDb" asp-route-id=@person.Id class="btn btn-primary">Edit</a>
                        </td>
                   </tr>
                }
            </tbody>

        </table>
    </div>
</div>
